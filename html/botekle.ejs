<%- include('ek/header', {bot, user, path}) %>
<div class="container is-fullhd">
	<div class="row justify-content-md-center">
		<h2 style="color: #ffffff;"><br/><br/>Add Bot</h2>
	</div>
 <form method="post">
				
   <div align="center" class="jumbotron" style="color:#fff; font-size:20px;">
		<div><i aria-hidden="true"></i>Client ID <a style="color:red">*</a></div>
		<div>
      <input type="text" style="text-align: center;" name="botid" id="botid"
									placeholder="Örneğin; <%=bot.user.id%>" required="required">
     </div>
   <br/>
		<div><i aria-hidden="true"></i>Prefix <a style="color:red">*</a></div>
		<div>
      <input type="text" style="text-align: center;" name="botprefix" id="botprefix"
									placeholder="!" required="required">
     </div>
     <br/>
     <div><i aria-hidden="true"></i>Library <a style="color:red">*</a></div>
    <div class="select-style">
     <select id="kutuphane" name="kutuphane" required="required">
       <option disabled selected>Please choose a library.</option>
       <option value="discordcr" >discordcr</option>
        
          <option value="Nyxx" >Nyxx</option>
        
          <option value="Discord.Net" >Discord.Net</option>
        
          <option value="DSharpPlus" >DSharpPlus</option>
        
          <option value="Nostrum" >Nostrum</option>
        
          <option value="coxir" >coxir</option>
        
          <option value="DiscordGo" >DiscordGo</option>
        
          <option value="Discord4J" >Discord4J</option>
        
          <option value="Javacord" >Javacord</option>
        
          <option value="JDA" >JDA</option>
        
          <option value="discord.js" >discord.js</option>
        
          <option value="Eris" >Eris</option>
        
          <option value="Discordia" >Discordia</option>
        
          <option value="RestCord" >RestCord</option>
        
          <option value="Yasmin" >Yasmin</option>
        
          <option value="disco" >disco</option>
        
          <option value="discord.py" >discord.py</option>
        
          <option value="discordrb" >discordrb</option>
        
          <option value="serenity" >serenity</option>
        
          <option value="SwiftDiscord" >SwiftDiscord</option>
        
          <option value="Sword" >Sword</option>
        
        <option value="Other" >Diğer</option>
     </select>
     </div>
      <br/>
     <div><i aria-hidden="true"></i>Owner ID<a style="color:red">*</a></div>
     <input type="text" style="color:lightgrey; text-align: center;" name="sahip" id="sahip"
                  value="<%=user.id%>" disabled>
     <br/>
     <div><i aria-hidden="true"></i>Short description<a style="color:red">*</a></div>
		<br/>
     <div>
      <input type="text" style="text-align: center; height:60px" name="kisa-aciklama" id="kisa-aciklama"
                placeholder="Write a short description of your bot." maxlength="30" required="required">
     </div>
     <br/>
     <div><i aria-hidden="true"></i>Long Description<a style="color:red">*</a></div>
		<div>
      <textarea style="text-align: center; height:150px" name="uzun-aciklama" id="uzun-aciklama"
                placeholder="Write a long description of your bot." minlength="70" required="required"></textarea>
     </div>
     <br/>
     <div><i aria-hidden="true"></i>Tags<a style="color:red">*</a></div>
     <div>
      <select multiple id="etikett" name="etikett" style=" width: 95%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border: none;
    border-bottom: 2px solid #0066c6;
    border-radius: 10px;
    background-color: white;
    color: black;
    height:150px;">
        <option value="Moderasyon">Moderation</option>
        <option value="Müzik">Music</option>
        <option value="Ayarlar">Settings</option>
        <option value="Eğlence">Fun</option>
        <option value="Web Panel">Web Panel</option>
       </select>
       <p>
         <a style="color:red">Not: </a><a style="color:lightgrey">multiple tags can be selected. If you are on the computer, hold down the <i> ctrl </i> key and select tags.</a>
       </p>
     </div>
     <br/>
     <div><i aria-hidden="true"></i>Web Site URL</div>
		<div>
      <input type="url" style="text-align: center;" name="botsite" id="botsite"
                placeholder="If there is, write the website url.">
     </div>
     <br/>
     <div><i aria-hidden="true"></i>Github URL</div>
		<div>
      <input type="url" style="text-align: center;" name="github" id="github"
                placeholder="If there is, write github url">
     </div>
     <br/>
     <div><i aria-hidden="true"></i>Destek Sunucusu URL'si</div>
		<div>
      <input type="url" style="text-align: center;" name="botdestek" id="botdestek"
                placeholder="If there is, write support server url">
     </div>
	
   
   <h6 style="color:red">
     Those with * are mandatory, and those without * are optional
   </h6>

				<div style="width: 100%; text-align: center; margin-top: 20px;">
					<button style="border-radius: 10px; background-color:#00a1ff" type="submit" class="btn btn-primary"><i class="fa fa-save fa-fw"></i>Submit<i aria-hidden='true'></i></button>
				</div>
   </div>
			</form>
		</div>
	</div>
</div>
</div>

<% include ./ek/footer %>